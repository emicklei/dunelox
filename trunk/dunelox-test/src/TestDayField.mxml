<?xml version="1.0" encoding="utf-8"?>
<mx:WindowedApplication xmlns:mx="http://www.adobe.com/2006/mxml" layout="absolute" 
	xmlns:controls="com.philemonworks.flex.controls.*" creationComplete="init()"
	backgroundImage="background.jpg">
	
	<controls:DayField id="field" y="149" x="266" toolTip="yyyy-mm-dd" fontSize="18" width="155" height="41"/>
	
	<mx:Script>
		<![CDATA[
			import com.philemonworks.flex.nls.NLS;
			import com.philemonworks.flex.util.Day;

			[Bindable]
			private var day:Day = new Day();
			
			private function init():void {
				
			}
			
			private function doApply():void {
				result.text = NLS.day(field.day)
			}
		]]>
	</mx:Script>
	<mx:Button label="Apply" click="doApply()" x="266" y="198" fontSize="18"/>
	<mx:Text id="result" x="372" y="200" text="Text" width="159" fontSize="18" color="#FFFFFF"/>
	<mx:Label x="10" y="10" text="Dunelox - TestDayField" color="#E1F409" fontSize="20"/>
	
</mx:WindowedApplication>
