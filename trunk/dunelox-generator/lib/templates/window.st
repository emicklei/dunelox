<?xml version="1.0" encoding="utf-8"?>
<!-- 	$class$TitleWindow is generated by Flexolop FlexGenerator on $timestamp$ -->
<mx:TitleWindow 
	title="$class$ Title Window"	
	width="500" 
	height="400" 
	showCloseButton="true"
	layout="absolute"
	xmlns:mx="http://www.adobe.com/2006/mxml" 
	xmlns:views="$packageroot$.views.*"
	xmlns:controls="com.philemonworks.flex.controls.*"  > 
	<views:$class$Form id="form" />
	
	<controls:WindowDropDown id="dropper" endFunction="removePopup"/>
	
	<mx:Script>
		<![CDATA[
			import $packageroot$.models.$class$;
			import mx.core.IFlexDisplayObject;
			import mx.managers.PopUpManager;
			
			// this is called from the buttons
			public function close(event:Event):void {
				dropper.end(event);
			}
			// this is called when the window is closed
			private function closeFromPopup(event:Event):void {
				dropper.end(event)
			}
			public static function popup(parent:DisplayObject, $model$:$packageroot$.models.$class$, modal:Boolean = false):$class$TitleWindow {
				var popup:$class$TitleWindow = $class$TitleWindow(PopUpManager.createPopUp(parent, $class$TitleWindow,modal));				
				popup.form.$model$ = $model$;								
				popup.dropper.start(popup);
				return popup;
			}
			public function removePopup():void {
				PopUpManager.removePopUp(IFlexDisplayObject(this))
			}			
		]]>
	</mx:Script>
</mx:TitleWindow>